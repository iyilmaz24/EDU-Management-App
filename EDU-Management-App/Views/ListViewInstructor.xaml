<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:EDU_Management_App.ViewModels"
             x:DataType="viewModels:InstructorViewModel"
             x:Class="EDU_Management_App.Views.ListViewInstructor">
    <ContentPage.Content>
        <VerticalStackLayout>
            
        <ListView BackgroundColor="DarkGray" SeparatorColor="Black" MaximumWidthRequest="600"
                  MaximumHeightRequest="350"
                  ItemsSource="{Binding StudentsList}"
                  SelectedItem="{Binding SelectedPerson}">
        </ListView>
            
        <FlexLayout WidthRequest="450" JustifyContent="SpaceBetween">
            <Entry MinimumWidthRequest="175" Text="{Binding Name}"></Entry> 
            <Entry MinimumWidthRequest="175" Text="{Binding Class}"></Entry> 
            <Button MinimumWidthRequest="100" Text="Add" Clicked="AddClicked"></Button>
            <Button MinimumWidthRequest="100" Text="Delete" Clicked="DeleteClicked"></Button>
        </FlexLayout>
            
        <Button MinimumWidthRequest="200" MaximumWidthRequest="250" Text="Cancel" Clicked="CancelClicked"></Button>
            
            
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>